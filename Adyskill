    <!-- Toast Notification -->
    <div class="toast" id="toast"></div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Mobile menu toggle
            const mobileMenuBtn = document.getElementById('mobileMenuBtn');
            const mainNav = document.getElementById('mainNav');
            
            mobileMenuBtn.addEventListener('click', function() {
                mainNav.classList.toggle('active');
                this.innerHTML = mainNav.classList.contains('active') 
                    ? '<i class="fas fa-times"></i>' 
                    : '<i class="fas fa-bars"></i>';
            });
            
            // File upload handling
            const uploadArea = document.getElementById('uploadArea');
            const fileInput = document.getElementById('fileInput');
            const compressBtn = document.getElementById('compressBtn');
            const resetBtn = document.getElementById('resetBtn');
            let selectedFile = null;
            
            uploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                uploadArea.classList.add('active');
            });
            
            uploadArea.addEventListener('dragleave', function() {
                uploadArea.classList.remove('active');
            });
            
            uploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                uploadArea.classList.remove('active');
                
                if (e.dataTransfer.files.length) {
                    handleFileSelection(e.dataTransfer.files[0]);
                }
            });
            
            fileInput.addEventListener('change', function() {
                if (fileInput.files.length) {
                    handleFileSelection(fileInput.files[0]);
                }
            });
            
            function handleFileSelection(file) {
                if (!file.type.match('image.*')) {
                    showToast('Please select an image file (JPG, PNG, WebP)', 'error');
                    return;
                }
                
                selectedFile = file;
                compressBtn.classList.remove('btn-disabled');
                compressBtn.disabled = false;
                
                // Display original image
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('originalImage').src = e.target.result;
                    document.getElementById('originalInfo').textContent = `${file.name} • ${formatFileSize(file.size)}`;
                    document.getElementById('originalSize').textContent = formatFileSize(file.size);
                };
                reader.readAsDataURL(file);
                
                showToast('Image selected. Adjust settings and click "Compress Image"', 'success');
            }
            
            // Quality slider
            const qualitySlider = document.getElementById('quality');
            const qualityValue = document.getElementById('qualityValue');
            
            qualitySlider.addEventListener('input', function() {
                qualityValue.textContent = this.value;
            });
            
            // Compression button
            compressBtn.addEventListener('click', function() {
                if (!selectedFile) return;
                
                const spinnerContainer = document.getElementById('spinnerContainer');
                const results = document.getElementById('results');
                
                spinnerContainer.style.display = 'flex';
                results.style.display = 'none';
                compressBtn.disabled = true;
                compressBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Compressing...';
                
                // Simulate compression (in a real app, use a library like compressor.js)
                setTimeout(function() {
                    compressImage(selectedFile);
                }, 1000);
            });
            
            // Reset button
            resetBtn.addEventListener('click', function() {
                selectedFile = null;
                fileInput.value = '';
                compressBtn.classList.add('btn-disabled');
                compressBtn.disabled = true;
                compressBtn.innerHTML = '<i class="fas fa-compress-arrows-alt"></i> Compress Image';
                
                document.getElementById('spinnerContainer').style.display = 'none';
                document.getElementById('results').style.display = 'none';
                
                document.getElementById('originalImage').src = '';
                document.getElementById('originalInfo').textContent = '';
                document.getElementById('originalSize').textContent = '-';
                
                document.getElementById('quality').value = 80;
                document.getElementById('qualityValue').textContent = '80';
                document.getElementById('width').value = '';
                document.getElementById('height').value = '';
                document.getElementById('maintainAspect').checked = true;
                document.getElementById('format').value = 'auto';
                
                showToast('Tool has been reset', 'success');
            });
            
            function compressImage(file) {
                const format = document.getElementById('format').value;
                const quality = parseInt(document.getElementById('quality').value) / 100;
                const widthInput = document.getElementById('width');
                const heightInput = document.getElementById('height');
                const maintainAspect = document.getElementById('maintainAspect').checked;
                
                let width = widthInput.value ? parseInt(widthInput.value) : null;
                let height = heightInput.value ? parseInt(heightInput.value) : null;
                
                const reader = new FileReader();
                reader.onload = function(e) {
                    const img = new Image();
                    img.onload = function() {
                        // Calculate new dimensions maintaining aspect ratio if needed
                        if (width || height) {
                            const aspectRatio = img.width / img.height;
                            
                            if (maintainAspect) {
                                if (width && !height) {
                                    height = Math.round(width / aspectRatio);
                                } else if (height && !width) {
                                    width = Math.round(height * aspectRatio);
                                }
                            }
                            
                            width = width || img.width;
                            height = height || img.height;
                        } else {
                            width = img.width;
                            height = img.height;
                        }
                        
                        // Create canvas for compression
                        const canvas = document.createElement('canvas');
                        canvas.width = width;
                        canvas.height = height;
                        const ctx = canvas.getContext('2d');
                        ctx.drawImage(img, 0, 0, width, height);
                        
                        // Determine output format
                        let outputFormat = format === 'auto' ? file.type.split('/')[1] : format;
                        if (outputFormat === 'jpeg') outputFormat = 'jpg';
                        
                        // Convert to blob with specified quality
                        canvas.toBlob(function(blob) {
                            const compressedUrl = URL.createObjectURL(blob);
                            
                            // Display results
                            document.getElementById('compressedImage').src = compressedUrl;
                            document.getElementById('compressedInfo').textContent = 
                                `compressed.${outputFormat} • ${formatFileSize(blob.size)}`;
                            document.getElementById('compressedSize').textContent = formatFileSize(blob.size);
                            
                            const reduction = 100 - (blob.size / file.size * 100);
                            document.getElementById('reduction').textContent = `${reduction.toFixed(1)}%`;
                            
                            // Set up download button
                            const downloadBtn = document.getElementById('downloadBtn');
                            downloadBtn.onclick = function() {
                                const a = document.createElement('a');
                                a.href = compressedUrl;
                                a.download = `compressed.${outputFormat}`;
                                document.body.appendChild(a);
                                a.click();
                                document.body.removeChild(a);
                                
                                showToast('Download started!', 'success');
                            };
                            
                            document.getElementById('spinnerContainer').style.display = 'none';
                            document.getElementById('results').style.display = 'block';
                            compressBtn.disabled = false;
                            compressBtn.innerHTML = '<i class="fas fa-compress-arrows-alt"></i> Compress Image';
                            
                            showToast('Image compressed successfully!', 'success');
                        }, `image/${outputFormat === 'jpg' ? 'jpeg' : outputFormat}`, quality);
                    };
                    img.src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
            
            // Helper functions
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }
            
            function showToast(message, type = '') {
                const toast = document.getElementById('toast');
                toast.innerHTML = `<i class="fas fa-${getToastIcon(type)}"></i> ${message}`;
                toast.className = 'toast';
                if (type) toast.classList.add(`toast-${type}`);
                toast.classList.add('show');
                
                setTimeout(function() {
                    toast.classList.remove('show');
                }, 3000);
            }
            
            function getToastIcon(type) {
                switch(type) {
                    case 'success': return 'check-circle';
                    case 'error': return 'times-circle';
                    case 'warning': return 'exclamation-circle';
                    default: return 'info-circle';
                }
            }
        });
    </script>
</body>
</html>
